@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Trackpack - Inicio</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap/css/bootstrap.min.css")">
    <!-- Ionicons CSS-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/ionicons.min.css")">
    <!-- Device mockups CSS-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/device-mockups.css")">
    <!-- Google fonts - Source Sans Pro-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">
    <!-- Swiper sLider-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/swiper/swiper.min.css")">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.default.css")" id="theme-stylesheet">
    <!-- Favicon-->
    <link rel="shortcut icon" href="@Url.Content("~/Content/assets/img/logo/Logo-1.png")">
    <script src="@Url.Content("~/Scripts/rastreo.js")"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <script type="text/javascript">
        var baseUrl = "@Url.Content("~")";
    </script>
</head>

<body>
    <!-- navbar-->
    <header class="header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Navbar brand--><a href="index.html" class="navbar-brand font-weight-bold">
                    <img src="@Url.Content("~/Content/assets/img/logo/logo.png")" alt="..."
                         class="img-fluid">
                </a>
            </div>
        </nav>
    </header>
    <div class="page-holder">
        <!-- Hero Section-->
        <section class="hero shape-1">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 align-self-start">
                        <h1 class="hero-heading">Trackpack - Más que solo un envio</h1>
                        <p class="lead mt-5 font-weight-light">
                            Nunca más pierdas la pista de tus paquetes, envio eficaz y
                            simple, lo encontrarás con nosotros. 📦
                        </p>
                        <!-- Subscription form-->
                        <form action="@Url.Action("Rastreo", "Home")" class="subscription-form mt-5">
                            @if(ViewBag.Error != null) {<script>swal("Oh no!", "Ingresa un numero de rastreo valido", "error");</script>}
                            <div class="form-group">
                                <label>Número de rastreo</label>
                                <input type="text" name="numeroRastreo" placeholder="Número de 10 digitos" id="numeroRastreo" class="form-control" maxlength="10">
                                <button class="btn btn-primary" type="submit" onclick="">
                                    Rastrea tu
                                    paquete
                                </button>
                            </div>
                        </form>

                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="device-wrapper mx-auto">
                            <div data-device="iPhone7" data-orientation="portrait" data-color="black" class="device">
                                <div class="screen"><img src="@Url.Content("~/Content/assets/img/screen.jpeg")" alt="..." class="img-fluid"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Features Section-->
        <section class="features shape-2">
            <div class="container">
                <div class="section-header text-center">
                    <span class="section-header-title">Disfruta la diferencia</span>
                    <h2 class="h1">¿Necesitas algo más?</h2>
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <p class="lead">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas ducimus, rem totam
                                sint, qui perferendis iure necessitatibus alias eligendi quidem expedita id architecto ad? Tenetur
                                pariatur accusantium asperiores inventore dolor.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row mt-5 text-center">
                    <div class="col-lg-4">
                        <div class="features-item mb-5 mb-lg-0">
                            <div class="gradient-icon gradient-1"><i class="icon ion-ios-heart"></i></div>
                            <h3 class="h5">Empresa 100% mexicana</h3>
                            <p>Nuestras sucursales se encuentran en todo México.</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="features-item mb-5 mb-lg-0">
                            <div class="gradient-icon gradient-2"><i class="icon ion-ios-calculator"></i></div>
                            <h3 class="h5">Cotiza tu envio</h3>
                            <p>¡Por medio de nuestra aplicación movil puedes cotizar el costo del envio de tu paquete!</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="features-item mb-5 mb-lg-0">
                            <div class="gradient-icon gradient-3"><i class="icon ion-ios-notifications"></i></div>
                            <h3 class="h5">Notificaciones inteligentes</h3>
                            <p>Recibe notificaciones en cada actualización de la ubicación de tu pedido ¡Asi nunca lo pierdes de vista!</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer class="footer mt-5">
        <div class="container text-center">
            <!-- Copyrights-->
            <div class="copyrights">
                <!-- Social menu-->

                <p class="copyrights-text mb-0">Copyright &copy; 2018 All rights reserved - Trackpack &copy;</p>
                <p class="copyrights-text mb-0">
                    Coded by <a href="https://bootstrapious.com/landing-pages" target="_blank"
                                class="copyrights-link">Bootstrapious</a>
                </p>
            </div>
        </div>
    </footer>
    <!-- JavaScript files-->
    <script src="@Url.Content("~/Scripts/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/popper.js/popper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Scripts/swiper/swiper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/front.js")"></script>
</body>
</html>