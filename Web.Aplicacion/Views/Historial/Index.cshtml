@{
    ViewBag.Title = "Historial";
}
<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row" style="display:flex; align-items:center;">
                        <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon ion-md-calendar" style="height:10vh; width:10vh; display:flex; align-items:center;justify-content: center;"></i>
                                </div>
                                <div class="breadcomb-ctn" style="display:flex; align-items:center;">
                                    <h2 style="margin-bottom:0">Historial</h2>
                                </div>
                            </div>
                        </div>
                        <div id="opciones" class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="display:flex; justify-content:end;">
                            <div class="inbox-btn-st-ls btn-toolbar">
                                <div class="btn-group ib-btn-gp active-hook nk-email-inbox">
                                    <button class="btn btn-default btn-sm" onclick="add();">
                                        <i class="icon ion-md-add-circle"></i>
                                        Agregar
                                    </button>
                                    <button class="btn btn-default btn-sm" onclick="edit();">
                                        <i class="icon ion-md-create"></i>
                                        Editar
                                    </button>
                                    <button class="btn btn-default btn-sm" onclick="del();">
                                        <i class="icon ion-md-trash"></i>
                                        Borrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Inbox area Start-->
<div class="inbox-area">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="inbox-text-list sm-res-mg-t-30">
                    <div class="form-group">
                        <div class="nk-int-st search-input search-overt">
                            <input id="folio" type="text" class="form-control" placeholder="Buscar orden de envio..." />
                            <button onclick="cargarTabla();" class="btn search-ib">Buscar</button>
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="table-historiales" style="display:none" class="table table-striped datatable-selection-single">
                            <thead>
                                <tr>
                                    <th id="ide" hidden>Id</th>
                                    <th>Fecha</th>
                                    <th>Descripción</th>
                                    <th>Estado</th>
                                    <th>Ciudad</th>
                                    <th>Estado de Paquete</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th id="ide" hidden>Id</th>
                                    <th>Fecha</th>
                                    <th>Descripción</th>
                                    <th>Estado</th>
                                    <th>Ciudad</th>
                                    <th>Estado de Paquete</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Inbox area End-->

<div class="modal fade" id="mdMain" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="mdContent">
            </div>
        </div>
    </div>
</div>
