
@{
    ViewBag.Title = "Add";
}

<script type="text/javascript" src="@Url.Content("~/Scripts/municipios.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/select_estados.js")"></script>

<input type="hidden" name="estado-id" id="estado-id" value="@ViewBag.IdEstado" />

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-example-wrap">
            <div class="cmp-tb-hd cmp-int-hd">
                <h2 style="font-size:25px">Historial</h2>
            </div>
            <div class="form-example-int form-horizental">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Descripción</label>
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                            <div class="nk-int-st">
                                <input type="text" class="form-control input-sm" placeholder="Descripcion" id="descripcion">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Estado</label>
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                            <div class="nk-int-st">
                                <select type="text" class="form-control input-sm" placeholder="Estado" id="estado"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Ciudad</label>
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                            <div class="nk-int-st">
                                <select type="text" class="form-control input-sm" placeholder="Municipio" id="municipio"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-example-int form-horizental">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                            <label class="hrzn-fm">Estado Paquete</label>
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                            <div class="nk-int-st">
                                <select type="text" class="form-control input-sm" id="estadoPaquete" placeholder="Estado de Paquete">
                                    <option value="1">PENDIENTE</option>
                                    <option value="2">ENTREGADO</option>
                                    <option value="3">CANCELADO</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="guardar()">Guardar</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>

